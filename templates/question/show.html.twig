{% extends "base.html.twig" %}

{% block title %}
    {{question.title}}
{% endblock title %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/question_show.css')}}">
    
{% endblock stylesheets %}

{% block body %}
    <div class="block">
        <div class="d-flex flex-row-nowrap align-items-center pb-30">
            {% include "./partials/_rating.html.twig"  with {rating:question.rating, from:'question', id: question.id}%}

            <h3>{{ question.title }}</h3>
            <div class="question-tag">QUESTION</div>
            <img src="https://randomuser.me/api/portraits/women/79.jpg" alt="Avatar" class="avatar ml-auto">
        </div>
        <p class="question-text">{{ question.content }}</p>
        <div class="separator"></div>
        <div class="pb-20">
            <h4>Nombre de réponses : {{ question.nbResponse }}</h4>
        </div>
        <h3 class="pb-20">Votre réponse: </h3>
        <div class="comment-form">
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary m-10">Soumettre</button>
            {{ form_end(form) }}
        </div>

        {% for comment in question.comments %}
        <div class="question-response-elem d-flex flex-row-nowrap mn-20">
                {% include "./partials/_rating.html.twig"  with {rating:comment.rating, from:'comment', id: comment.id} %}
                <div class="d-flex flex-column">
                    <div class="d-flex  flex-row-nowrap align-items-center pb-10">
                        <img src="https://randomuser.me/api/portraits/women/3.jpg" alt="avatar" class="avatar-small mr-10">
    
                        <p class="clickable">Roberta Carlson</p>
                        <span class="ml-auto">{{ comment.createdAt | format_datetime(pattern='d MMMM y', locale='fr') }}</span>
                    </div>
                </div>
                <p class="question-response-text">{{ comment.content }}</p>
            </div>
            
        {% endfor %}
    </div>
    
{% endblock body %}